#!/bin/sh
connec="$(cat /sys/class/net/w*/operstate)"
ssid="$(nmcli -t -f NAME connection show --active)"

if [ "$connec" = "up" ]; then
        stat="$(awk '/^\s*w/ { print "ğŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
else
        stat="âŒ"
fi

notify-send "Wifi Status" "Connected to $ssid at $stat"
