#!/bin/sh

Capacity="$(cat /sys/class/power_supply/BAT*/capacity)"
stat="$(cat /sys/class/power_supply/BAT*/status)"

case "$stat" in
		"Full") icon="FUL" ;;
		"Discharging") icon="DIS" ;;
		"Charging") icon="CHG" ;;
		"Not charging") icon="DIS" ;;
		"Unknown") icon="UNK" ;;
		*) exit 1 ;;
	esac

notify-send "Battery Info" "ðŸ”‹ $stat $Capacity%"
